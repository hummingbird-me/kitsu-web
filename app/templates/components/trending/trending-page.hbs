{{#if session.hasUser}}
  {{trending/trending-banner}}
{{else}}
  {{trending/guest-banner}}
{{/if}}

<div class="trending-sections {{if session.hasUser "logged-in"}}">
  {{! Trending Media }}
  {{trending/trending-media}}

  {{! Kitsu Media Trending Top }}
  {{ad-unit unit="kitsu.trending.top"
    targeting=(hash section="trending")
    sizes=(hash
      mobile=(array (array 336 280) (array 300 250) (array 320 100) (array 320 50))
      tablet=(array 728 90)
      desktop=(array (array 970 90) (array 728 90))
    )}}

  {{! Recently Reviewed Media }}
  {{trending/recently-reviewed}}

  {{! Popular Reviews }}
  {{trending/popular-reviews}}

  {{! Kitsu Media Trending Middle }}
