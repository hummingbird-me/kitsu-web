    sizes=(hash
      mobile=(array (array 336 280) (array 300 250) (array 320 100) (array 320 50))
      tablet=(array 728 90)
      desktop=(array (array 970 90) (array 728 90))
    )}}

  {{! Seasonal Anime }}
  {{trending/seasonal-series}}

  {{! Highest Rated }}
  {{trending/highest-rated}}

  {{! Kitsu Media Trending Bottom }}
